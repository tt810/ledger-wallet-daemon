<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder immediateFlush="true">
            <pattern>%date %thread TraceId=%X{traceId} [%level] %logger{0} : %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="co.ledger.wallet.daemon" level="debug" />
    <logger name="slick" level="warn" />
    <logger name="io.netty" level="warn" />
    <logger name="com.twitter" level="warn" />
    <logger name="djinni" level="warn" />
    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>